<%- include("../partials/html-head.ejs") %>
  <div class="container-fluid d-flex justify-content-center align-items-center"
    style="height:100vh; border:1px solid blue">
    <div class="d-none d-lg-block col-2 h-100" style="border: 5px solid red">

    </div>
    <div class="col-8 h-100" style="border: 5px solid red">
      <form action="/game/results">
        <h3>HELLO GUYS PENGIUN</h3>
        <% for(const question of questionsData.questions) { %>
          <div class="card p-2 m-2">
            <h4><%-question.question%></h4>
            <% for( let i=0; i < question.options.length; i++ ) { %>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="question<%-question.id%>"
                  id="question<%-question.id%>_<%-i%>">
                <label class="form-check-label" for="question<%-question.id%>_<%-i%>">
                  <%-question.options[i]%>
                </label>
              </div>
              <% } %>
          </div>
          <% } %>
            <button class="btn btn-primary btn-lg">Submit</button>
      </form>
    </div>
    <div class="d-none d-lg-block col-2 h-100" style="border: 5px solid red">
    </div>
  </div>
  <%- include("../partials/html-foot.ejs") %>